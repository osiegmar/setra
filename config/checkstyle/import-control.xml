<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.1//EN" "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="de.siegmar.securetransfer">

    <allow pkg="java.io"/>
    <allow pkg="java.nio"/>
    <allow pkg="java.security"/>
    <allow pkg="java.time"/>
    <allow pkg="java.util"/>
    <allow pkg="javax.annotation"/>
    <allow pkg="javax.crypto"/>
    <allow pkg="javax.servlet"/>
    <allow pkg="javax.validation"/>

    <allow pkg="com.fasterxml.jackson"/>
    <allow pkg="com.google.common"/>

    <allow pkg="org.apache.commons"/>
    <allow pkg="org.hibernate.validator"/>
    <allow pkg="org.jsoup"/>
    <allow pkg="org.junit"/>
    <allow pkg="org.slf4j"/>
    <allow pkg="org.springframework"/>

    <allow pkg="de.siegmar.securetransfer.component"/>
    <allow pkg="de.siegmar.securetransfer.config"/>
    <allow pkg="de.siegmar.securetransfer.domain"/>

    <subpackage name="config">
        <allow pkg="de.siegmar.securetransfer"/>
    </subpackage>

    <subpackage name="controller">
        <allow pkg="org.apache.http.entity"/>
        <allow pkg="de.siegmar.securetransfer.service"/>
        <allow pkg="de.siegmar.securetransfer.controller.dto"/>
    </subpackage>

    <subpackage name="service">
        <allow pkg="de.siegmar.securetransfer.repository"/>
    </subpackage>

    <subpackage name="repository">
        <allow pkg="de.siegmar.securetransfer.repository"/>
    </subpackage>

</import-control>
